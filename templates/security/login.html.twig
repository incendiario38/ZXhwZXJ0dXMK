{% extends 'base.html.twig' %}

{% block title %}Войти{% endblock %}

{% block substylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}"/>{% endblock %}

{% block body_class %}position-relative{% endblock %}

{% block body %}
    <form method="post" class="form-login">
        <div class="text-center mb-4">
            <object type="image/svg+xml"
                    data="{{ asset('img/logo.svg') }}"
                    width="256px"
                    height="256px"
            >
                <img src="{{ asset('img/logo.png') }}" alt="ИС Экспертус">
            </object>
        </div>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="form-label-group">
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                   autocomplete="username" required autofocus placeholder="Имя пользователя...">
            <label for="inputUsername">Имя пользователя</label>
        </div>

        <div class="form-label-group">
            <input type="password" name="password" id="inputPassword" class="form-control"
                   autocomplete="current-password"
                   required placeholder="Пароль...">
            <label for="inputPassword">Пароль</label>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Запомнить меня
            </label>
        </div>

        <button class="btn btn-lg btn-first btn-block" type="submit">Войти</button>

    </form>
{% endblock %}

{% block test %}
<div class="position-absolute text-muted text-small" style="bottom: 0;
    left: 0;
    right: 0;
    text-align: center;">
    Данные для входа:<br>
    Роль врача <code>doctor</code> - <code>doctor</code><br>
    Роль врача-эксперта <code>expert</code> - <code>expert</code><br>
</div>
{% endblock %}